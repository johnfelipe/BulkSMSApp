@model BulkSMSWebApp.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reestablecer Contraseña";
    Layout = "~/Views/Shared/_LoginPage.cshtml";
}


<div class="row">


    <div class="panel">
        <div class="panel-heading no-collapse">

            <h4 class="text-center"><strong>@ViewBag.Title </strong><span class="fa fa-send"></span></h4>

        </div>
        <div class="panel-body">
            <br />
            <section id="loginForm">
                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                 
                    @Html.HiddenFor(m => m.Code);
                    
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                        <span class="col-md-1"></span>
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2" })
                        <div class="col-md-12">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-6" })
                        <div class="col-md-12">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <br />

                    <button type="submit" class="btn btn-info btn-block"> Actualizar Contraseña <span class="fa fa-sign-in"></span></button>

                    <div class="clearfix"></div>

                    <br />

                    <div class="alert-danger">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                }
            </section>

        </div>
    </div>

</div>





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
