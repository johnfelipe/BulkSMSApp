<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Plataforma SMS IDEAY</title>
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <link href="~/Content/Template/fontsgoogleapis.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Template/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />

    <script src="~/Scripts/Template/jquery-1.11.1.min.js"></script>
    <script src="~/Scripts/Template/jquery.knob.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>

    <script type="text/javascript">
        $(function () {
            $(".knob").knob();
        });
    </script>

    <link href="~/Content/Template/theme.css" rel="stylesheet" />
  

</head>
<body class=" theme-blue">

    <style type="text/css">


        .navbar-default .navbar-brand, .navbar-default .navbar-brand:hover {
            color: #fff;
        }
    </style>

    <script type="text/javascript">
        $(function () {
            var uls = $('.sidebar-nav > ul > *').clone();
            uls.addClass('visible-xs');
            $('#main-menu').append(uls.clone());
        });
    </script>



    @Html.Partial("_Header")

    @Html.Partial("_Navegacion")


    <div class="content">
        <div class="header text-center">
            @*<div class="stats">
                    <p class="stat"><span class="label label-info">aquí podemos poner lo de los mensajes</span> Tickets</p>
                    <p class="stat"><span class="label label-success">27</span> Tasks</p>
                    <p class="stat"><span class="label label-danger">15</span> Overdue</p>
                </div>*@
            <h1 class="page-title">@ViewBag.Title</h1>
            @if (ViewBag.Title != "Página de Inicio")
            {
                <p>Los Campos con el símbolo <strong class="text-danger"> * </strong> son obligatorios</p>
            }
            


        </div>
        <div class="main-content">


            @{ Html.RenderPartial("_Alert"); }
            @RenderBody()




        </div>
        <footer>
            <hr>

     
            <p class="text-center">© @DateTime.Now.Year Equipos y Sistemas S.A </p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        $('*').each(function () {
            var req = $(this).attr('data-val-required');
            if (undefined != req) {
                var label = $('label[for="' + $(this).attr('id') + '"]');
                var text = label.text();
                if (text.length > 0) {
                    label.append('<span style="color:red"> *</span>');
                }
            }
        });
    </script>



    <script src="~/Scripts/bootstrap.js"></script>
</body>
</html>