@model BulkSMSWebApp.Models.Mensaje

<dl class="dl-horizontal col-md-12 col-md-offset-0">

    <dt>
        Mensaje:
    </dt>

    <dd>
        @Html.DisplayFor(model => model.CuerpoMensaje)
    </dd>
    <hr />

    @if (Model.FlujoID == 1)
    {
       
        <dt>Enviado por: </dt>

        <dd>@Html.DisplayFor(model => model.EnviadoPor)</dd>
        <hr />
    }
 
    <dt>
        Fecha Mensaje:
    </dt>

    <dd>
        @Html.DisplayFor(model => model.FechaMensaje)
    </dd>
    <hr />

    <dt>
        Dirección:
    </dt>

    <dd>@Html.DisplayFor(model => model.Flujo_Mensaje.NombreFlujo)</dd>
    <hr />

    <dt>
        @Html.DisplayNameFor(model => model.Estado.NombreEstado):
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Estado.NombreEstado)
    </dd>
    <hr />

    @if (Model.EstadoID == 7)
    {
        <dt>Eliminado por:</dt>
        <dd>@Html.DisplayFor(model => model.DesactivadoPor)</dd>
        <hr />
    }

</dl>

